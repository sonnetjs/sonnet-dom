    "@sonnetjs/core": "0.0.18",
    "@sonnetjs/html": "*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "cross-env": "^7.0.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}